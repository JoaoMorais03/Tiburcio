{
  "name": "tiburcio-backend",
  "version": "1.1.0",
  "type": "module",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.30.1",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "check": "biome check src/ && tsc --noEmit",
    "mcp": "node dist/mcp.js",
    "mcp:dev": "tsx src/mcp.ts",
    "index:standards": "tsx ./scripts/index-standards.ts",
    "index:codebase": "tsx ./scripts/index-codebase.ts",
    "index:architecture": "tsx ./scripts/index-architecture.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@mastra/core": "^1.7.0",
    "@mastra/hono": "^1.1.6",
    "@mastra/langfuse": "^1.0.3",
    "@mastra/mcp": "^1.0.1",
    "@mastra/memory": "^1.5.1",
    "@mastra/observability": "^1.2.1",
    "@mastra/pg": "^1.6.1",
    "@mastra/qdrant": "^1.0.0",
    "@mastra/rag": "^2.1.1",
    "@openrouter/ai-sdk-provider": "^2.2.3",
    "@qdrant/js-client-rest": "^1.17.0",
    "ai": "^6.0.99",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.70.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.12.2",
    "hono-pino": "^0.10.3",
    "hono-rate-limiter": "^0.5.3",
    "ioredis": "^5.9.3",
    "pino": "^10.3.1",
    "postgres": "^3.4.5",
    "tree-sitter": "^0.25.0",
    "tree-sitter-java": "^0.23.5",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.10.5",
    "drizzle-kit": "^0.31.9",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
